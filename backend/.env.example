# Alize Backend Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# CORS / FRONTEND
# =============================================================================
# Your frontend URL (for CORS and email links)
FRONTEND_URL=https://your-app.vercel.app
# Additional CORS origins (comma-separated)
# CORS_ORIGINS=https://app1.example.com,https://app2.example.com

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=sqlite:///./app.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/alize

# =============================================================================
# AUTHENTICATION
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
ADMIN_EMAILS=admin@example.com

# =============================================================================
# EMAIL DELIVERY (choose one or both for fallback)
# =============================================================================

# --- Option 1: Resend (recommended) ---
# Sign up at https://resend.com and get an API key
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM=Alize <notifications@yourdomain.com>

# --- Option 2: SMTP (fallback if Resend fails) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
# Optional: Use a different FROM address than SMTP_USER
# SMTP_FROM=notifications@yourdomain.com
# Set to true for port 465 (implicit SSL) instead of STARTTLS
# SMTP_USE_SSL=false

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Enable/disable email notifications globally
NOTIFY_ENABLED=true
# Minimum interval between notifications per user (in minutes, default 72h)
NOTIFY_INTERVAL_MINUTES=4320
# Override recipient for testing (useful for debugging)
# NOTIFY_EMAIL_TO=test@example.com
# Unsubscribe link to include in emails
# NOTIFY_UNSUBSCRIBE_URL=https://yourdomain.com/unsubscribe

# =============================================================================
# SCHEDULER
# =============================================================================
# How often to run the background job scheduler (in minutes)
SCHEDULER_INTERVAL_MINUTES=60

# =============================================================================
# SLACK (optional)
# =============================================================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# =============================================================================
# AI / OPENAI (optional, for job analysis)
# =============================================================================
# OPENAI_API_KEY=sk-your-openai-key

# =============================================================================
# AWS S3 (optional, for file storage)
# =============================================================================
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=eu-west-3
